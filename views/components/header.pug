doctype html
html
  head
    title Meu Site Escuro
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/stylesheets/style.css")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")

  body
    header.header-bar
      .left-section
        img.logo(src="/images/logo.png", alt="Logo")
        nav.nav-links
          a(href="/") About me
          a(href="/posts") Posts

      .right-section
        .search-box
          i.fas.fa-search
          input(type="text", placeholder="Search")
          span.shortcut âŒ˜K

        if user
            .user-info
            if user.foto
              span(style="display:inline-block; width:12px;")
              a(href=`/perfil/${user.id}`)
                img(src=`/uploads/${user.foto}`, alt="Foto", width="40", height="40", style="border-radius:50%")
              span(style="display:inline-block; width:12px;")
            //- span= user.nome

            a.btn.btn-danger(href="/logout") Logout
        else
            a.btn.btn-primary(href="/login") Login
           
            a.btn.btn-warning(href="/register") Cadastrar
